<div class="bg-white shadow py-4">
    <div class="container">
        <div class="flex items-center justify-between">

            <div class="flex items-center space-x-8 w-full">

                <a class="text-2xl py-4" href="/">Shopify Vuejs</a>

                <nav class="flex flex-row w-full items-center justify-between p-5 bg-brand-500 overflow-x-auto" role="navigation">
                    <ul class="flex flex-row justify-between ">
                        {%- for link in linklists.main-menu-2.links -%}
                            <li class="hover-trigger mx-4 whitespace-nowrap">
                                <a href="{{ link.url }}" {% if link.active %} aria-current="page" {% endif %}>
                                    {{ link.title }}
                                </a>

                                {%- if link.links != blank -%}
                                    <ul class="absolute bg-white border border-grey-100 px-4 py-2 hover-target flex-row space-x-8">
                                        {%- for child_link in link.links -%}
                                            <li class="">
                                                <a class="text-gray-500" href="{{ child_link.url }}" {% if child_link.active %} aria-current="page" {% endif %}>
                                                    {{ child_link.title }}
                                                </a>

                                                {%- if child_link.links != blank -%}
                                                    <ul class="flex flex-col">
                                                        {%- for grandchild_link in child_link.links -%}
                                                            <li class="">
                                                                <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %} aria-current="page" {% endif %}>
                                                                    {{ grandchild_link.title }}
                                                                </a>
                                                            </li>
                                                        {%- endfor -%}
                                                    </ul>
                                                {%- endif -%}

                                            </li>
                                        {%- endfor -%}
                                    </ul>
                                {%- endif -%}

                            </li>
                        {%- endfor -%}
                    </ul>
                </nav>
                <!-- </ul> -->


            </div>
            {% comment %}
                Icons
            {% endcomment %}
            <ul class="flex items-center space-x-8">
                <li class="">
                    <a class="flex items-center space-x-3 text-color-link hover:text-color-link-hover transition duration-200" href="/account/login">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg>
                        <span>Account</span>
                    </a>
                </li>
                <li class="">
                    <a class="flex items-center space-x-3 text-color-link hover:text-color-link-hover transition duration-200" href="/cart">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg>
                        <span>Cart</span>
                        <theme-cart-counter></theme-cart-counter>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<style>
.hover-trigger .hover-target {
    display: none;
}

.hover-trigger:hover .hover-target {
    display: flex;
}
</style>
